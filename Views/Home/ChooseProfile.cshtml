@{
	ViewData["Title"] = "Choose a profile type";
}
<div class="min-h-screen">
	<div class="relative flex flex-wrap justify-center items-center py-12 md:py-20 max-w-6xl mx-auto md:px-8">
		<div class="flex-1">
			<div class="mx-auto max-w-7xl px-6 md:px-0">
				<h1 class="mb-5 text-center text-gray-100 text-4xl leading-tight md:text-5xl md:leading-tight md:text-7xl lg:leading-tight font-bold">
					What brings you to DotnetDevs?
				</h1>
			</div>
			<div class="flex flex-col md:flex-row gap-y-6 md:gap-x-6 mt-8 pb-16 sm:mt-12 sm:pb-20 md:pb-28">
				<div class="bg-gray-800 text-center md:rounded-lg w-full md:w-1/2 p-6">
					<h2 class="mb-4 text-gray-100 text-3xl md:leading-tight leading-tight font-semibold">
						I'm looking for work
					</h2>
					<p class="mb-4 text-base text-gray-200">
						Fill out your dev profile and sit back as companies reach out to you.
					</p>
					<a asp-controller="Developers" asp-action="Create" class="group relative flex items-center justify-center py-1 px-4 mx-auto w-auto max-w-sm md:w-auto text-lg font-semibold text-white bg-gradient-to-r from-pink-500 to-orange-700 overflow-hidden rounded-md overflow-hidden rounded-md">
						<div class="absolute transform -translate-x-full group-hover:-translate-x-0 h-full w-full transition ease-in-out duration-500 bg-gradient-to-r from-teal-400 to-blue-700">
						</div>
						<p class="relative z-10 mr-2 text-base lg:text-xl leading-loose lg:leading-loose">Create developer profile</p>
					</a>
				</div>
				<div class="bg-gray-800 text-center md:rounded-lg w-full md:w-1/2 p-6">
					<h2 class="mb-4 text-gray-100 text-3xl md:leading-tight leading-tight font-semibold">
						I'm hiring developers
					</h2>
					<p class="mb-4 text-base text-gray-200">
						Fill out your companies profile and start hiring .NET developers.
					</p>
					<a asp-controller="Companies" asp-action="Create" class="group relative flex items-center justify-center py-1 px-4 mx-auto w-auto max-w-sm md:w-auto text-lg font-semibold text-white bg-gradient-to-r from-pink-500 to-orange-700 overflow-hidden rounded-md overflow-hidden rounded-md">
						<div class="absolute transform -translate-x-full group-hover:-translate-x-0 h-full w-full transition ease-in-out duration-500 bg-gradient-to-r from-teal-400 to-blue-700">
						</div>
						<p class="relative z-10 mr-2 text-base lg:text-xl leading-loose lg:leading-loose">Create company profile</p>
					</a>
				</div>
			</div>
		</div>
	</div>
</div>