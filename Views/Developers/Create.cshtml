@model DeveloperCreate
@{
	ViewData["Title"] = "Create your .NET developer profile";
}
<div class="">
	<div class="relative flex flex-wrap justify-center items-center py-12 md:py-20 max-w-6xl mx-auto lg:px-8">
		<div class="flex-1">
			<h1 class="mb-4 text-gray-100 text-3xl leading-tight font-bold pl-6 lg:pl-0">
				Your developer profile
			</h1>
			<form asp-action="Store" asp-controller="Developers" method="post" enctype="multipart/form-data">
				<div class="text-red-500 text-sm flex justify-start">
					@Html.ValidationSummary()
				</div>
				<div class="bg-[#182635] text-left lg:rounded-lg">
					<div class="flex flex-col md:flex-row md:justify-between border-b border-gray-900 p-6 md:gap-6">
						<div class="w-full md:w-1/3 space-y-6 mb-6 md:mb-0">
							<div class="">
								<h2 class="text-lg font-semibold">Profile</h2>
								<p class="text-base text-gray-200">
									This information will be displayed publicly.
								</p>
							</div>
						</div>
						<div class="w-full md:w-2/3 space-y-6">
							<div>
								<label asp-for="FullName" class="block text-base font-medium text-white">Name *</label>
								<p class="text-sm text-gray-300">Your name will <i>not</i> be displayed on your public profile.</p>
								<div class="mt-2">
									<input asp-for="FullName" type="text" required class="block w-full py-2 px-3 text-gray-100 outline-none rounded-md bg-[#2b3d51] border-2 border-transparent focus:border-sky-300" />
								</div>
								<div class="mt-1 text-red-500 text-sm">
									<span asp-validation-for="FullName"></span>
								</div>
							</div>
							<div>
								<label asp-for="Hero" class="block text-base font-medium text-white">Profile Heading *</label>
								<p class="text-sm text-gray-300">Describe yourself as a dev in a few words</p>
								<div class="mt-2">
									<input asp-for="Hero" type="text" required class="block w-full py-2 px-3 text-gray-100 outline-none rounded-md bg-[#2b3d51] border-2 border-transparent focus:border-sky-300" />
								</div>
								<div class="mt-1 text-red-500 text-sm">
									<span asp-validation-for="Hero"></span>
								</div>
							</div>
							<div>
								<label asp-for="City" class="block text-base font-medium text-white">City *</label>
								<p class="text-sm text-gray-300">Providing your location makes it easier for companies hiring locally</p>
								<div class="mt-2">
									<input asp-for="City" type="text" required class="block w-full py-2 px-3 text-gray-100 outline-none rounded-md bg-[#2b3d51] border-2 border-transparent focus:border-sky-300" />
								</div>
								<div class="mt-1 text-red-500 text-sm">
									@Html.ValidationMessageFor(m => m.City)
								</div>
							</div>
							<div>
								<label asp-for="State" class="block text-base font-medium text-white">State *</label>
								<div class="mt-2">
									<input asp-for="State" type="text" required class="block w-full py-2 px-3 text-gray-100 outline-none rounded-md bg-[#2b3d51] border-2 border-transparent focus:border-sky-300" />
								</div>
								<div class="mt-1 text-red-500 text-sm">
									@Html.ValidationMessageFor(m => m.State)
								</div>
							</div>
							<div>
								<label asp-for="Country" class="block text-base font-medium text-white">Country *</label>
								<div class="mt-2">
									<input asp-for="Country" type="text" required class="block w-full py-2 px-3 text-gray-100 outline-none rounded-md bg-[#2b3d51] border-2 border-transparent focus:border-sky-300" />
								</div>
								<div class="mt-1 text-red-500 text-sm">
									@Html.ValidationMessageFor(m => m.Country)
								</div>
							</div>
							<div>
								<label class="block text-base font-medium text-white" for="country">Avatar *</label>
								<p class="text-sm text-gray-300">Add a picture of yourself. A square png or jpg image works best (250x250). Large images will get cutoff due to size limitations.</p>
								<div class="mt-2 flex flex-col md:flex-row md:items-center items-start">
									<div class="flex-1">
										<input asp-for="AvatarFile" type="file" required accept=".png, .jpg">
									</div>
								</div>
								<div class="mt-1 text-red-300 text-sm">
									<span asp-validation-for="AvatarFile"></span>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="bg-gray-800 text-left lg:rounded-lg mt-12">
					<div class="flex flex-col md:flex-row md:justify-between border-b border-gray-900 p-6 md:gap-6">
						<div class="w-full md:w-1/3 space-y-6 mb-6 md:mb-0">
							<div class="">
								<h2 class="text-lg font-semibold">Bio *</h2>
								<p class="text-base text-gray-200">
									Share a few paragraphs on your past experiences and what makes you special. This is your chance to stand out amongst the crowd. Don't be shy!
								</p>
								<p class="text-base font-bold text-gray-200 mt-4">
									Example Topics:
								</p>
								<ul class="text-base text-gray-200 mt-2 list-disc list-inside">
									<li>Your developer education and origins</li>
									<li>Milestones and accomplishments</li>
									<li>Skills that set you a part from other devs</li>
									<li>What you are passionate about</li>
									<li>Things you care about outside of work</li>
								</ul>
							</div>
						</div>
						<div class="w-full md:w-2/3 space-y-6">
							<div>
								<div class="">
									<textarea asp-for="Bio" rows="16" type="text" required class="block w-full py-2 px-3 text-gray-100 outline-none rounded-md bg-[#2b3d51] border-2 border-transparent focus:border-sky-300"></textarea>
								</div>
								<div class="mt-1 text-red-500 text-sm">
									@Html.ValidationMessageFor(m => m.Bio)
								</div>
								<p class="mt-2 text-sm text-gray-300">Personally identifiable information will be removed.</p>
							</div>
						</div>
					</div>
				</div>
				<div class="bg-gray-800 text-left lg:rounded-lg mt-12">
					<div class="flex flex-col md:flex-row md:justify-between border-b border-gray-900 p-6 md:gap-6">
						<div class="w-full md:w-1/3 space-y-6 mb-6 md:mb-0">
							<div class="">
								<h2 class="text-lg font-semibold">Work preferences</h2>
								<p class="text-base text-gray-200">
									What kind of work are you looking for?
								</p>
							</div>
						</div>
						<div class="w-full md:w-2/3 space-y-6">
							<div>
								<label class="block text-base font-medium text-white" for="name">Search Status *</label>
								<div class="mt-2 flex flex-col">
									@foreach (var status in Model.SearchStatuses)
									{
										<div class="mb-4">
											<label>
												<input name="SearchStatusID"
												   @(status.IsDefault ? " checked " : " ")
												   type="radio"
												   value="@status.ID" />
												<span>@status.Name</span>
											</label>
											<p class="text-sm text-gray-300">@status.Description</p>
										</div>
									}
								</div>
								<div class="mt-1 text-red-300 text-sm">
									@Html.ValidationMessageFor(m => m.SearchStatusID)
								</div>
							</div>
							<div>
								<label class="block text-base font-medium text-white" for="name">Experience Level *</label>
								<p class="text-sm text-gray-300">Select the experience you feel you are at right now.</p>
								<div class="mt-2 flex flex-col">
									@foreach (var level in Model.ExperienceLevels)
									{
										<div class="mb-4">
											<label>
												<input name="ExperienceLevelID"
												   @(level.IsDefault ? " checked " : " ")
												   type="radio"
												   value="@level.ID" />
												<span>@level.Name</span>
											</label>
										</div>
									}
								</div>
								<div class="mt-1 text-red-300 text-sm">
									@Html.ValidationMessageFor(m => m.ExperienceLevelID)
								</div>
							</div>
							<div>
								<label class="block text-base font-medium text-white" for="startDate">Available to start on *</label>
								<div class="mt-2 flex flex-col">
									<input type="date" asp-for="StartDate" required class="block max-w-xs py-2 px-3 rounded-md text-gray-100 outline-none bg-[#2b3d51] border-2 border-transparent focus:border-sky-300" />
								</div>
								<div class="mt-1 text-red-300 text-sm">
									@Html.ValidationMessageFor(m => m.StartDate)
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="bg-gray-800 text-left lg:rounded-lg mt-12">
					<div class="flex flex-col md:flex-row md:justify-between border-b border-gray-900 p-6 md:gap-6">
						<div class="w-full md:w-1/3 space-y-6 mb-6 md:mb-0">
							<div class="">
								<h2 class="text-lg font-semibold">Online presence</h2>
								<p class="text-base text-gray-200">
									Where can people learn more about you and your work?
								</p>
							</div>
						</div>
						<div class="w-full md:w-2/3 space-y-6">
							<div>
								<label class="block text-base font-medium text-white" for="website">Website</label>
								<div class="mt-1 flex rounded-md">
									<span class="inline-flex items-center px-3 rounded-l-md bg-[#32475e] text-gray-400">
										https://
									</span>
									<input asp-for="Website" type="text" class="flex-1 block w-full py-2 px-3 rounded-none rounded-r-md text-gray-100 outline-none bg-[#2b3d51] border-2 border-transparent focus:border-sky-300" />
								</div>
								<div class="mt-1 text-red-300 text-sm">
									@Html.ValidationMessageFor(m => m.Website)
								</div>
							</div>
							<div>
								<label class="block text-base font-medium text-white" for="github">Github</label>
								<div class="mt-1 flex rounded-md">
									<span class="inline-flex items-center px-3 rounded-l-md bg-[#32475e] text-gray-400">
										https://
									</span>
									<input asp-for="Github" type="text" class="flex-1 block w-full py-2 px-3 rounded-none rounded-r-md text-gray-100 outline-none bg-[#2b3d51] border-2 border-transparent focus:border-sky-300" />
								</div>
								<div class="mt-1 text-red-300 text-sm">
									@Html.ValidationMessageFor(m => m.Github)
								</div>
							</div>
							<div>
								<label class="block text-base font-medium text-white" for="twitter">Twitter</label>
								<div class="mt-1 flex rounded-md">
									<span class="inline-flex items-center px-3 rounded-l-md bg-[#32475e] text-gray-400">
										https://
									</span>
									<input asp-for="Twitter" type="text" class="flex-1 block w-full py-2 px-3 rounded-none rounded-r-md text-gray-100 outline-none bg-[#2b3d51] border-2 border-transparent focus:border-sky-300" />
								</div>
								<div class="mt-1 text-red-300 text-sm">
									@Html.ValidationMessageFor(m => m.Twitter)
								</div>
							</div>
							<div>
								<label class="block text-base font-medium text-white" for="linkedin">Linkedin</label>
								<div class="mt-1 flex rounded-md">
									<span class="inline-flex items-center px-3 rounded-l-md bg-[#32475e] text-gray-400">
										https://
									</span>
									<input asp-for="Linkedin" type="text" class="flex-1 block w-full py-2 px-3 rounded-none rounded-r-md text-gray-100 outline-none bg-[#2b3d51] border-2 border-transparent focus:border-sky-300" />
								</div>
								<div class="mt-1 text-red-300 text-sm">
									@Html.ValidationMessageFor(m => m.Linkedin)
								</div>
							</div>
							<div>
								<label class="block text-base font-medium text-white" for="stackOverflow">StackOverflow</label>
								<div class="mt-1 flex rounded-md">
									<span class="inline-flex items-center px-3 rounded-l-md bg-[#32475e] text-gray-400">
										https://
									</span>
									<input asp-for="StackOverflow" type="text" class="flex-1 block w-full py-2 px-3 rounded-none rounded-r-md text-gray-100 outline-none bg-[#2b3d51] border-2 border-transparent focus:border-sky-300" />
								</div>
								<div class="mt-1 text-red-300 text-sm">
									@Html.ValidationMessageFor(m => m.StackOverflow)
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="w-full flex justify-end mt-6 pr-6 lg:pr-0">
					<button type="submit" class="group relative flex items-center justify-center py-2 px-5 font-semibold text-white bg-gradient-to-r from-pink-500 to-orange-700 overflow-hidden rounded-md overflow-hidden rounded-md">
						<div class="absolute transform -translate-x-full group-hover:-translate-x-0 h-full w-full transition ease-in-out duration-500 bg-gradient-to-r from-teal-400 to-blue-700">
						</div>
						<p class="relative z-10 text-base leading-loose">Create</p>
					</button>
				</div>
			</form>
		</div>
	</div>
</div>